{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <h1>Modification de la franchise</h1>
    <div class="formTwig">

        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.email, { 'label': 'Adresse mail du client : '}) }}
        {{ form_row(form.client_name, { 'label': 'Nom du client :' }) }}
        {{ form_row(form.password, { 'label' : 'Mot de passe :'}) }}
        {{ form_row(form.active, { 'label' : 'Partenaire déjàs actif ? '}) }}
        {{ form_row(form.short_description, { 'label' : 'Description rapide de l\'entreprise' }) }}
        {{ form_row(form.full_description, { 'label' : ' Description complète de l\'entreprise' }) }}
        {{ form_row(form.logo, { 'label' : 'Envoyer le logo de votre entreprise'}) }}
        {{ form_row(form.url, { 'label' : 'URL du site de la franchise'}) }}
        {{ form_row(form.dpo, { 'label' : 'Protection des données personnelles'}) }}
        {{ form_row(form.technical_contact, { 'label' : 'Contact du technicien'}) }}
        {{ form_row(form.commercial_contact, { 'label' : 'Contact du commercial'}) }}
        <div class="formSubmit" onClick="showConfirm()">
            {{ form_row(form.submit, { 'label': 'Envoyer'}) }}
        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}

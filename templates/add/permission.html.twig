{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<h1>Ajout du bâtiment</h1>

<div class="formTwig">

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-check form-switch">
        {{ form_widget(form.send_newsletter, { 'label': 'Envoyer Newsletters' }) }}
    </div><br>

    <div class="form-check form-switch">
        {{ form_row(form.sell_drink, { 'label': 'Vendre des boissons' }) }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.payment_stats, { 'label': 'Statistiques de paiments' }) }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.add_members, { 'label': 'Ajouter membres ' }) }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.recrut_employee, { 'label': 'Recruter des employés' }) }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.activated_website, { 'label': 'Site disponible' }) }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.place_search, { 'label': 'Recherche d\'un nouveau lieux' })  }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.restaurant_site, { 'label': 'Restaurant sur place' })  }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.renovation, { 'label': 'Renauvation à faire ? ' })  }}
    </div>

    <div class="form-check form-switch">
        {{ form_row(form.available_coach, { 'label': 'Coach disponible ? ' })  }}
    </div>

    {{ form_row(form.street, { 'label': 'Rue du bâtiment : ' })  }}
    {{ form_row(form.branch_id, { 'label': 'Appartient à la structure : ' })  }}

    <div class="form-check form-switch" style="color:red;">
        {{ form_row(form.isActive, { 'label': 'Bâtiment déjas en activitée ? '}) }}
    </div>
    <div class="formSubmit" onClick="showConfirm()">
    {{ form_row(form.submit, { 'label': 'Envoyer'}) }}
    </div>
    {{ form_end(form) }}

</div>
{% endblock %}

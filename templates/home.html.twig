{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}


<div class="acceuil">
    <img src="{{ asset('picture/logo-marque/dark-boot-marque.png') }}" alt="Image principale d'acceuil">
    {% if app.user %}

        {% if app.user.roles == ['ROLE_ADMIN'] %}
        <button type="button" name="button" class="btn button bg-dark"><a href="{{ path('app_panel') }}">Acceuil</a></button>
        {% elseif app.user.roles == ['ROLE_PARTENAIRE'] %}
        <button type="button" name="button" class="btn button bg-dark"><a href="{{ path('app_panel_partenaire') }}">Acceuil</a></button>
        {% elseif app.user.roles == ['ROLE_STRUCTURE'] %}
        <button type="button" name="button" class="btn button bg-dark"><a href="{{ path('app_panel_structure') }}">Acceuil</a></button>
        {% endif %}
    {% else %}
        <button type="button" name="button" class="btn button bg-dark"><a href="{{ path('app_panel') }}">Acceuil</a></button>

    {% endif %}
</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>Connexion Structure</h1>

    <div class="loginForm">

        <form class="form_login" action="{{ path('app_login_structure') }}" method="post"><br>

            <div class="username">
                <label for="inputEmail">Email</label>
                <input type="email"  name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="password">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" id="username" name="_username" value="Garde la patate" />
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <button class="buttonSend" type="submit"> Se Connecter </button>
            {% if error %}
                <div style="text-align: center" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>

            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
                </div>
            {% endif %}
            <br>
        </form>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

<h1>Connexion Administrateur</h1>

    <div class="loginForm">

        <form class="form_login" action="{{ path('app_login') }}" method="post"><br>
            <div class="username">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
            <div class="password">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password"/>
            </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="buttonSend">Se connecter</button><br>
            {% if error %}
                <div style="text-align: center" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </form>

    </div>
{% endblock %}
